{
  "name": "game-launcher",
  "version": "1.0.0",
  "description": "Launcher desktop empresarial para Bonk.io e Haxball",
  "main": "dist/main/main.js",
  "author": "Game Launcher Team",
  "license": "MIT",
  "scripts": {
    "dev": "npm run clean:dist && npm run copy:assets && concurrently -k -s first \"pnpm run watch:ts\" \"pnpm run watch:assets\" \"pnpm run start:electron\"",
    "watch:ts": "tsc -w",
    "watch:assets": "cpx \"src/**/*.{html,css}\" dist -w",
    "copy:assets": "cpx \"src/**/*.{html,css}\" dist",
    "start:electron": "wait-on dist/main/main.js dist/renderer/index.html --delay 1000 && electron .",
    "build": "npm run copy:assets && tsc && electron-builder",
    "build:win": "npm run copy:assets && tsc && electron-builder --win",
    "build:mac": "npm run copy:assets && tsc && electron-builder --mac",
    "build:linux": "npm run copy:assets && tsc && electron-builder --linux",
    "postinstall": "electron-builder install-app-deps",
    "clean": "rm -rf dist build",
    "clean:dist": "rm -rf dist"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "concurrently": "^8.2.2",
    "cpx": "^1.5.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5.3.3",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "electron-updater": "^6.1.7"
  },
  "build": {
    "appId": "com.gamelauncher.app",
    "productName": "Game Launcher",
    "directories": {
      "output": "build"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "publish": {
      "provider": "github",
      "owner": "seu-usuario",
      "repo": "game-launcher"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "assets/icon.icns",
      "category": "public.app-category.games"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "assets/icon.png",
      "category": "Game"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}