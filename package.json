{
  "name": "futhero_launcher",
  "version": "1.0.13",
  "description": "A secure bonk.io and haxball launcher with frontend manipulation capabilities.",
  "main": "dist/main/main.js",
  "scripts": {
    "dev": "npm run build && electron .",
    "build": "tsc && node scripts/copy-static.js",
    "build:win": "npm run build && electron-builder --win",
    "start": "electron ."
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/semver": "^7.7.1",
    "electron": "^30.0.0",
    "electron-builder": "^24.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "electron-is-dev": "^3.0.1",
    "electron-updater": "^6.6.2",
    "fs": "^0.0.1-security",
    "path": "^0.12.7"
  },
  "build": {
    "appId": "com.brenoluizdev.futhero",
    "productName": "Futhero",
    "directories": {
      "buildResources": "build"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "build/icon.ico"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "brenoluizdev",
        "repo": "Futhero-Desktop"
      }
    ]
  }
}
