{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": "src/scripts",
    "outDir": "dist/scripts",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "sourceMap": true,
    "allowArbitraryExtensions": true
  },
  "include": ["src/scripts/**/*"],
  "exclude": ["node_modules"]
}